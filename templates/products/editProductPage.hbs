{{> header}}
<section id="viewEditAd" class="viewEditAd">
    <h1 class="titleForm">Edit existing advertisement</h1>
    <form id="formEditAd" class="form" action="#/edit/product" method="post">
        <div><input type="hidden" name="id" value="{{product._id}}" required /></div>
        <div><input type="hidden" name="publisher" value="{{product.publisher}}" required /></div>
        <div>Title:</div>
        <div><input type="text" name="title" value="{{product.title}}" required /></div>
        <div>Description:</div>
        <div><textarea name="description" rows="5" required>{{product.description}}</textarea></div><br>
        <div>
            {{#if imageUrl}}
                <img src="{{product.image}}" alt="Ad picture" style="width:200px;height:auto;">
            {{else}}
                <label id="picture" style="color: coral">There's no picture of the product</label>
            {{/if}}
        </div>

        <div>Image Url:</div>
        <div><input type="text" name="image" value="{{product.image}}"/></div>
        <div>Date Published:</div>
        <div><input type="date" name="datePublished" value="{{product.datePublished}}" required /></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" value="{{product.price}}" required /></div>
        <div><input type="submit" id="buttonEditAd" value="Edit" /></div>
    </form>
</section>
<br>
{{> footer}}
